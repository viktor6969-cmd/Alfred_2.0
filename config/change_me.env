# =========================
# knockd Configuration
# =========================
# Array of var names (each var is a knockd block)
KNOCKD_PROFILES=( "KNOCKD_OPTIONS" "KNOCKD_SSH" "KNOCKD_VPN" "KNOCKD_NGINX" )

KNOCKD_OPTIONS='[options]
UseSyslog
LogFile = /var/log/knockd.log'

KNOCKD_SSH='[openSSH]
sequence    = 7000,8000,9000
seq_timeout = 10
command     = ufw allow from %IP% to any app SSH-Custom
tcpflags    = syn
cmd_timeout = 300
stop_command = ufw delete allow from %IP% to any app SSH-Custom'

KNOCKD_VPN='[openVPN]
sequence    = 1000,2000,3000
seq_timeout = 10
command     = ufw allow from %IP% to any app VPN
tcpflags    = syn
cmd_timeout = 300
stop_command = ufw delete allow from %IP% to any app VPN'

KNOCKD_NGINX='[openNginx]
sequence    = 4000,5000,6000
seq_timeout = 10
command     = ufw allow from %IP% to any app Nginx
tcpflags    = syn
cmd_timeout = 300
stop_command = ufw delete allow from %IP% to any app Nginx'


